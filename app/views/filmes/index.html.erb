<p id="notice"><%= notice %></p>

<h1>Filmes</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Genero filme</th>
      <th>Preco de locacao</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @filmes.each do |filme| %>
      <tr>
        <td><%= filme.nome %></td>
        <td><%= filme.genero_filme %></td>
        <td><%= filme.preco_de_locacao %></td>
        <td><%= link_to 'Show', filme %></td>
        <td><%= link_to 'Edit', edit_filme_path(filme) %></td>
        <td><%= link_to 'Destroy', filme, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

